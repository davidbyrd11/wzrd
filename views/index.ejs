<!DOCTYPE html>
<html>
  <head>
    <title>Anna</title>
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Anna</h1>
    <div id="messages">
      <% for (var i = 0; i < messages.length; i++) { %>
        <% var message = messages[i] %>
        <div class="message <%=message.user%>">
          <div class="text"><%=message.body%></div>
        </div>
      <% } %>
    </div>
    <input type="text" id="text" placeholder="type and hit enter to submit" />
  </body>
  <script>
    var socket = io.connect('http://localhost:3000');

    $input = $('#text');
    $input.on('keypress', function (e) {
      if (e.which == 13) {
        socket.emit('sendMessage', {
          body: $input.val()
        }, function(res) {
          $('#messages').append('<div class="message anna"><div class="text">' + $input.val() + '</div></div>');

          $input.val('');
        });
      }
    });

    socket.on('newMessage', function(data) {
      console.log(data);
      $('#messages').append('<div class="message user"><div class="text">' + data.body + '</div></div>');
    })
  </script>
</html>